{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "app",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["app/**/*"],
	"exclude": ["node_modules", "build"]
}
